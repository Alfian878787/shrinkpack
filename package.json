{
  "name": "shrinkpack",
  "description": "Fast, resilient, reproducible builds with npm install.",
  "version": "0.18.1",
  "author": "Jamie Mason (https://github.com/JamieMason)",
  "ava": {
    "files": [
      "test/dist/index.js"
    ]
  },
  "bin": {
    "shrinkpack": "dist/bin.js"
  },
  "bugs": "https://github.com/JamieMason/shrinkpack/issues",
  "contributors": [
    "Andrew Levine (https://github.com/DrewML)",
    "Chris Wheatley (https://github.com/swirlycheetah)",
    "David Cook (https://github.com/divergentdave)",
    "Dmytro Tolstyi (https://github.com/GitAngel)",
    "Dylan Piercey (https://github.com/DylanPiercey)",
    "Emil Sågfors (https://github.com/lime)",
    "Jason Hewison (https://github.com/ChunkySamurai)",
    "Kat Marchán  (https://github.com/zkat)",
    "Kirill Fomichev (https://github.com/fanatid)",
    "Mark Erikson (https://github.com/markerikson)",
    "Scott Sidwell (https://github.com/5id)",
    "Zlatan Vasović (https://github.com/zdroid)"
  ],
  "dependencies": {
    "chalk": "2.3.2",
    "circular-json": "0.5.1",
    "commander": "2.15.1",
    "execa": "0.10.0",
    "fs-extra": "5.0.0",
    "gunzip-maybe": "1.4.1",
    "semver": "5.5.0",
    "ssri": "5.3.0",
    "when": "3.7.8"
  },
  "devDependencies": {
    "@types/execa": "0.9.0",
    "@types/fs-extra": "5.0.1",
    "@types/node": "9.6.1",
    "@types/rimraf": "2.0.2",
    "@types/semver": "5.5.0",
    "@types/when": "2.4.29",
    "ava": "0.25.0",
    "prettier": "1.11.1",
    "rimraf": "2.6.2",
    "tslint": "5.9.1",
    "typescript": "2.8.1"
  },
  "engines": {
    "node": ">=4.0",
    "npm": "<3.8.8 || >3.10.3"
  },
  "files": [
    "dist"
  ],
  "homepage": "https://github.com/JamieMason/shrinkpack",
  "keywords": [
    "bundle",
    "cache",
    "deploy",
    "deployments",
    "import",
    "install",
    "npm",
    "offline",
    "package",
    "save",
    "shrinkwrap"
  ],
  "license": "MIT",
  "main": "shrinkpack",
  "repository": "JamieMason/shrinkpack",
  "scripts": {
    "build": "npm run build:src && npm run build:test",
    "build:src": "tsc --project .",
    "build:test": "tsc --project ./test",
    "format": "prettier --write '**/*.md' './src/**/*.ts' './test/**/*.ts'",
    "lint": "npm run lint:src && npm run lint:test",
    "lint:src": "tslint --fix --project ./tsconfig.json",
    "lint:test": "tslint --fix --project ./test/tsconfig.json",
    "prebuild": "rimraf dist ./test/dist",
    "prelint": "npm run format",
    "prepack": "npm run build",
    "pretest": "npm run build:test",
    "test": "ava"
  },
  "typings": "dist/index.d.ts"
}
